<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <TextView
            android:padding="@dimen/padding"
            android:text="@string/select_media"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/sheet_select_photo"
            android:clickable="true"
            android:background="@drawable/default_ripple"
            android:layout_width="match_parent"
            android:padding="@dimen/margin"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="20dp">

                <ImageView
                    android:paddingRight="@dimen/padding"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_folder_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_weight="1"
                    android:textColor="@color/text_color_black"
                    android:text="@string/select_library"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/sheet_take_photo"
            android:clickable="true"
            android:background="@drawable/default_ripple"
            android:layout_width="match_parent"
            android:padding="@dimen/margin"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="20dp">

                <ImageView
                    android:paddingRight="@dimen/padding"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_camera_alt_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_weight="1"
                    android:textColor="@color/text_color_black"
                    android:text="@string/start_camera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
</LinearLayout>