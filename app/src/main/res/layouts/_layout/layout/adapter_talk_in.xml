<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/talk_date_cont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginBottom="@dimen/margin">
        <TextView
            android:background="@color/colorGreyLight"
            android:padding="5dp"
            android:textSize="@dimen/font_size_small"
            android:id="@+id/talk_date"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <!-- OPPONETS CHAT -->
<RelativeLayout
    android:id="@+id/msg_talk_in_parent"
    android:layout_marginLeft="@dimen/margin"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/chat_bubble_margin"
    android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/photo_profile_talk"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_width="32dp"
            android:layout_height="32dp" />
    <LinearLayout
        android:id="@+id/msg_talk_in_wrapper"
        android:layout_marginLeft="@dimen/chat_bubble_margin"
        android:layout_marginTop="@dimen/chat_bubble_margin"
        android:paddingLeft="@dimen/padding"
        android:paddingTop="@dimen/chat_bubble_padding"
        android:paddingBottom="@dimen/chat_bubble_padding"
        android:paddingRight="@dimen/chat_bubble_padding"
        android:background="@drawable/chat_bubble_in"
        android:layout_toRightOf="@id/photo_profile_talk"
        android:layout_toEndOf="@id/photo_profile_talk"
        android:maxWidth="@dimen/chat_bubble_max_width"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/msg_talk_in_img"
            android:scaleType="centerCrop"
            android:layout_width="@dimen/chat_bubble_max_width"
            android:layout_height="200dp" />
        <TextView
            android:id="@+id/msg_talk_in"
            android:textColor="@color/text_color_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
            <TextView
                android:id="@+id/time_talk_in"
                android:textSize="@dimen/font_size_small"
                android:layout_marginLeft="@dimen/chat_bubble_margin"
                android:layout_alignBottom="@id/msg_talk_in_wrapper"
                android:layout_toRightOf="@id/msg_talk_in_wrapper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
</RelativeLayout>
    <!-- OURS CHAT -->
    <RelativeLayout
        android:id="@+id/msg_talk_out_parent"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/chat_bubble_margin"
        android:layout_marginRight="@dimen/margin"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/msg_talk_out_wrapper"
            android:layout_alignParentRight="true"
            android:background="@drawable/chat_bubble_out"
            android:layout_marginLeft="@dimen/chat_bubble_margin"
            android:paddingLeft="@dimen/chat_bubble_padding"
            android:paddingTop="@dimen/chat_bubble_padding"
            android:paddingBottom="@dimen/chat_bubble_padding"
            android:paddingRight="@dimen/padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/msg_talk_out_img"
                android:scaleType="centerCrop"
                android:layout_width="@dimen/chat_bubble_max_width"
                android:layout_height="200dp" />
            <TextView
                android:id="@+id/msg_talk_out"
                android:textColor="@color/text_color_black"
                android:maxWidth="@dimen/chat_bubble_max_width"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/time_talk_out"
            android:layout_marginLeft="@dimen/chat_bubble_margin"
            android:layout_alignBottom="@id/msg_talk_out_wrapper"
            android:layout_toLeftOf="@id/msg_talk_out_wrapper"
            android:textSize="@dimen/font_size_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</LinearLayout>