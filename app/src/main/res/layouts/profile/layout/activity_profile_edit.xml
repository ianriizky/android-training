<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
       <variable
           name="profileModel"
           type="jp.co.terraresta.androidlesson.view.view_model.profile.ProfileEditViewModel" />
    </data>

<ScrollView
    android:scrollbars="vertical"
    android:scrollbarStyle="insideOverlay"
    android:scrollIndicators="right"
    android:layout_margin="@dimen/margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- nickname -->
        <LinearLayout
            android:orientation="vertical" android:showDividers="end" android:divider="@drawable/textview_divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/text_color_black"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="@string/profile_title_nickname"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <EditText
                    android:text="@={profileModel.nickname}"
                    android:id="@+id/nickname"
                    android:inputType="text"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>

        <!-- Birth -->
        <LinearLayout
            android:id="@+id/birthday"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:orientation="vertical" android:showDividers="end" android:divider="@drawable/textview_divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:paddingBottom="@dimen/padding"
                android:paddingTop="@dimen/padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/text_color_black"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="@string/profile_title_birthday"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:text="@={profileModel.birthday}"
                    android:id="@+id/tv_birthday"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>

        <!-- Sex -->
        <LinearLayout
            android:id="@+id/gender"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:orientation="vertical" android:showDividers="end" android:divider="@drawable/textview_divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:paddingBottom="@dimen/padding"
                android:paddingTop="@dimen/padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/text_color_black"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="@string/profile_title_gender"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:text="@={profileModel.gender}"
                    android:id="@+id/tv_gender"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>

        <!-- Occupation -->
        <LinearLayout
            android:id="@+id/job"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:orientation="vertical" android:showDividers="end" android:divider="@drawable/textview_divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:paddingBottom="@dimen/padding"
                android:paddingTop="@dimen/padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/text_color_black"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="@string/profile_title_job"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:text="@={profileModel.job}"
                    android:id="@+id/tv_job"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>

        <!-- Area -->
        <LinearLayout
            android:id="@+id/residence"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:orientation="vertical" android:showDividers="end" android:divider="@drawable/textview_divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:paddingBottom="@dimen/padding"
                android:paddingTop="@dimen/padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/text_color_black"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="@string/profile_title_residence"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:text="@={profileModel.residence}"
                    android:id="@+id/tv_residence"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />>
            </LinearLayout>
        </LinearLayout>

        <!-- Hobby -->
        <LinearLayout
            android:id="@+id/hobby"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:orientation="vertical" android:showDividers="end" android:divider="@drawable/textview_divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:paddingBottom="@dimen/padding"
                android:paddingTop="@dimen/padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/text_color_black"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="@string/profile_title_hobby"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:text="@={profileModel.hobby}"
                    android:id="@+id/tv_hobby"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>

        <!-- Personality -->
        <LinearLayout
            android:id="@+id/personal"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:orientation="vertical" android:showDividers="end" android:divider="@drawable/textview_divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:paddingBottom="@dimen/padding"
                android:paddingTop="@dimen/padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/text_color_black"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="@string/profile_title_personality"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:text="@={profileModel.personality}"
                    android:id="@+id/tv_personal"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:orientation="vertical" android:showDividers="end" android:divider="@drawable/textview_divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
            android:paddingBottom="@dimen/padding"
            android:paddingTop="@dimen/padding"
                android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/text_color_black"
                    android:gravity="center_vertical"
                    android:text="@string/profile_title_about_me"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <EditText
                    android:text="@={profileModel.aboutme}"
                    android:scrollHorizontally="true"
                    android:scrollbars="vertical"
                    android:id="@+id/aboutme"
                    android:lines="5"
                    android:minLines="5"
                    android:maxLines="10"
                    android:gravity="top|left"
                    android:inputType="textMultiLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout> <!-- end of wrapper -->
</ScrollView>
</layout>